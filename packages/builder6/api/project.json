{
  "name": "builder6-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/builder6/api/src",
  "projectType": "application",
  "implicitDependencies": ["engine"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/packages/builder6/api",
        "main": "packages/builder6/api/src/main.ts",
        "tsConfig": "packages/builder6/api/tsconfig.app.json",
        "assets": ["packages/builder6/api/src/assets"],
        "webpackConfig": "packages/builder6/api/webpack.config.js",
        "generatePackageJson": true,
        "babelUpwardRootMode": true,
        "sourceMap": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "builder6-api:build",
        "host": "0.0.0.0"
      },
      "configurations": {
        "production": {
          "buildTarget": "builder6-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/builder6/api/**/*.ts"]
      }
    },
    "test-unit": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/builder6/api/jest.config.ts",
        "passWithNoTests": false,
        "bail": true,
        "testPathPattern": ["packages/builder6/api/test/unit"]
      }
    },
    "test-ce": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/builder6/api/jest.config.ts",
        "passWithNoTests": false,
        "bail": true,
        "testPathPattern": ["packages/builder6/api/test/integration/ce"]
      }
    },
    "test-cloud": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/builder6/api/jest.config.ts",
        "passWithNoTests": false,
        "bail": true,
        "testPathPattern": ["packages/builder6/api/test/integration/cloud"]
      }
    },
    "test-ee": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/builder6/api/jest.config.ts",
        "passWithNoTests": false,
        "bail": true,
        "testPathPattern": ["packages/builder6/api/test/integration/ee"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build builder6-api",
          "export $(cat packages/builder6/api/.env.tests | xargs) && AP_EDITION=cloud nx test-cloud builder6-api --output-style stream-without-prefixes",
          "export $(cat packages/builder6/api/.env.tests | xargs) && AP_EDITION=ce nx test-ce builder6-api --output-style stream-without-prefixes",
          "export $(cat packages/builder6/api/.env.tests | xargs) && AP_EDITION=ee nx test-ee builder6-api --output-style stream-without-prefixes"
        ],
        "parallel": false
      }
    },
    "test:docker": {
      "command": "UID=\"$(id -u)\" GID=\"$(id -g)\" docker compose --profile full -f docker-compose.test.yml up --exit-code-from app --attach app"
    },
    "db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P packages/builder6/api/tsconfig.app.json ./node_modules/typeorm/cli.js"
      }
    },
    "db-migration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx db builder6-api -- migration:generate -p -d packages/builder6/api/src/app/database/database-connection.ts packages/builder6/api/src/app/database/migration/{args.name}"
      }
    }
  },
  "tags": []
}